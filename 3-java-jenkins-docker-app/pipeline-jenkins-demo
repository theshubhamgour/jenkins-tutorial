pipeline {
    agent any

    stages {
        stage('Clone Github Repository') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/theshubhamgour/jenkins-tutorial.git'
                sh 'pwd'
            }
        }
        stage('Build') {
            steps {
                dir('3-java-jenkins-docker-app') {
                    sh 'mvn clean package'
                }
            }
        }
        stage('Test') {
            steps {
                dir('3-java-jenkins-docker-app') {
                    sh 'mvn test'
                }
            }
        }
        stage('Compile') {
            steps {
                dir('3-java-jenkins-docker-app') {
                    sh 'mvn compile'
                }
            }
        }    
        stage('Docker image Build') {
            steps {
                dir('3-java-jenkins-docker-app') {
                    sh 'docker build -t java-jenkins-docker:latest .'
                }
            }
        } 
        stage('Docker image Tag') {
            steps {
                dir('3-java-jenkins-docker-app') {
                    sh 'docker tag java-jenkins-docker:latest theshubhamgour/java-jenkins-docker:latest'
                }
            }
        }   
        stage('Docker Login ') {
            steps {
                dir('3-java-jenkins-docker-app') {
                    sh 'docker login -u theshubhamgour -p redhat123#'
                }
            }
        }
        stage('Docker Image Push ') {
            steps {
                dir('3-java-jenkins-docker-app') {
                    sh 'docker push theshubhamgour/java-jenkins-docker:latest'
                }
            }
        }
        stage('Clean Work Space ') {
            steps {
                dir('3-java-jenkins-docker-app') {
                    cleanWs()
                }
            }
        }
    }
}
